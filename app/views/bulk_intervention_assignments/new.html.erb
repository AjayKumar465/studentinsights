<div id="content">
  <%= form_for @bulk_intervention_assignment, remote: true do |b| %>
    <h1>Add Intervention</h1>
    <div class="left-bar-block">
      <h2>Select Intervention</h2>
      <%= b.select(:intervention_type_id,
            options_from_collection_for_select(InterventionType.all, :id, :name),
            { include_blank: " -- Intervention type -- " },
            { required: true }
          ) %>
    </div>
    <div class="left-bar-block">
      <h2>Comment</h2>
      <%= b.text_area :comment, { placeholder: "Add comment", cols: "20", rows: "5" } %>
    </div>
    <div class="left-bar-block">
      <h2>End date</h2>
      <%= b.text_field :end_date, class: "datepicker", placeholder: "yyyy-mm-dd" %>
    </div>
    <%= b.hidden_field :educator_id, value: current_educator.id %>
    <%= b.hidden_field :student_ids %>
    <button id="close-intervention-form" class="btn cancel-btn" type="button">Cancel</button>
    <%= b.submit "Save", class: "btn save-btn" %>
    <% end %>
</div>
