  <div class="school-year">

    <div class="year">
      <h1><%= school_year.name %></h1>
    </div>

    <% unless events[:mcas_math_result].is_a?(MissingAssessment) && events[:mcas_ela_result].is_a?(MissingAssessment) %>
      <div class="section mcas-result-section">
        <h2 class="section-header">MCAS</h2>
        <% if events[:mcas_ela_result].present? %>
          <h3 class="assesment-type">English</h3>
          <div class="assessment-dark-background mcas-ela-values">
            <div class="values">
              <p>Performance: <strong><%= events[:mcas_ela_result].performance_level %></strong></p>
            </div>
            <div class="values">
              <p>Scaled Score: <strong><%= events[:mcas_ela_result].scale_score %></strong></p>
            </div>
          </div>
        <% end %>
        <% if events[:mcas_math_result].present? %>
          <h3 class="assesment-type">Math</h3>
          <div class="assessment-dark-background mcas-math-values">
            <div class="values">
              <p>Performance: <strong><%= events[:mcas_math_result].performance_level %></strong></p>
            </div>
            <div class="values">
              <p>Scaled Score: <strong><%= events[:mcas_math_result].scale_score %></strong></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if events[:star_math_results].present? || events[:star_reading_results].present? %>
      <div class="section star-result-section">
        <h2 class="section-header">STAR</h2>
        <% if events[:star_reading_results].present? %>
          <h3 class="assesment-type">Reading</h3>
          <% events[:star_reading_results].each do |s| %>
            <h3 class="assesment-type"><%= s.date_taken.strftime("%B %e, %Y")  %></h3>
            <div class="assessment-dark-background star-reading-values">
              <div class="values">
                <p>Reading percentile: <strong><%= AssessmentPresenter.new(s).percentile_rank %></strong></p>
              </div>
              <div class="values">
                <p>Reading level: <strong><%= AssessmentPresenter.new(s).instructional_reading_level %></strong></p>
              </div>
            </div>
          <% end %>
        <% end %>
        <% if events[:star_math_results].present? %>
          <h3 class="assesment-type">Math</h3>
          <% events[:star_math_results].each do |s| %>
            <div class="assessment-dark-background star-math-values">
              <div class="values">
                <p>Math percentile: <strong><%= AssessmentPresenter.new(s).percentile_rank %></strong></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <div class="section attendance-section">
      <h2 class="section-header">Attendance</h2>
      <% if events[:attendance_events_summary][:absences] > 0 || events[:attendance_events_summary][:tardies] > 0 %>
        <div class="values">
          <p>Absences: <strong><%= events[:attendance_events_summary][:absences] %></stron></p>
        </div>
        <div class="values">
          <p>Tardies <strong><%= events[:attendance_events_summary][:tardies] %></strong></p>
        </div>
      <% else %>
        <p class="attendance-type">No absences or tardies</p>
      <% end %>
    </div>

    <div class="section behavior-section">
      <h2 class="section-header">Behavior</h2>
      <% if events[:discipline_incidents].present? %>
          <% events[:discipline_incidents].each do |d| %>
            <div class="referral">
              <p><strong>Code:</strong>  <%= d.incident_code %></p>
              <p><strong>Description:</strong>  <%= d.incident_description %></p>
              <p><strong>Location:</strong>  <%= d.incident_location %></p>
              <p><strong>Date:</strong>  <%= d.event_date.strftime("%B %e, %Y") %></p>
            </div>
          <% end %>
      <% else %>
        <p>No behavior incidents</p>
      <% end %>
    </div>
  </div>
